<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/g_color">

    <TextView
        android:id="@+id/post_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/cookierun_black"
        android:text="게시판"
        android:textColor="@color/gfont_color"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="85dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/g_btn"
        android:fontFamily="@font/cookierun_regular"
        android:text="글 삭제"
        android:visibility="gone"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="10pt"
        android:layout_marginHorizontal="17dp"
        android:layout_below="@id/post_label"
        android:padding="3dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="17dp"
        android:background="@color/black"
        android:layout_below="@id/textViewTitle"/>

    <TextView
        android:id="@+id/textViewauthorId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="6pt"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/textViewTitle"/>

    <TextView
        android:id="@+id/textViewContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:textSize="9pt"
        android:layout_margin="17dp"
        android:background="@drawable/roundwhite"
        android:minHeight="500dp"
        android:layout_below="@id/textViewauthorId"/>

</RelativeLayout>
