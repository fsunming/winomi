<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/wnm_color">

    <!-- 로그인 TextView -->
    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:text="로 그 인"
        android:textSize="40dp"
        android:textColor="@color/wnmfont_color"
        android:fontFamily="@font/cookierun_black"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="34dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/roundwhite"
        android:orientation="vertical">

        <!-- 아이디 입력 칸 -->
        <EditText
            android:id="@+id/loginID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="51dp"
            android:layout_marginBottom="17dp"
            android:layout_marginHorizontal="17dp"
            android:hint="아이디"/>

        <!-- 비밀번호 입력 칸 -->
        <EditText
            android:id="@+id/loginPW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="51dp"
            android:layout_marginHorizontal="17dp"
            android:hint="비밀번호"
            android:inputType="textPassword"/>
    </LinearLayout>

    <!-- 버튼을 포함하는 가로 LinearLayout -->
    <LinearLayout
        android:id="@+id/joinlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- 로그인 버튼 -->
        <Button
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginEnd="34dp"
            android:onClick="ClickButton0"
            android:background="@drawable/join_btn"
            android:textColor="@color/white"
            android:fontFamily="@font/cookierun_regular"
            android:text="로그인"/>

        <!-- 회원가입 버튼 -->
        <Button
            android:id="@+id/regBtn"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginStart="34dp"
            android:background="@drawable/join_btn"
            android:textColor="@color/white"
            android:fontFamily="@font/cookierun_regular"
            android:text="회원가입"/>
    </LinearLayout>
</LinearLayout>
